<!--pages/booking/booking.wxml-->
<view class="container">
  <!-- 顶部标题和返回按钮 -->
  <text class="return-button" bindtap="goBack">返回</text>
  <view class="header">
    <text class="header-title">会议室预约</text>
  </view>

  <!-- 中间内容区域：会议室选择下拉框 -->
  <view class="booking-area">
    <picker mode="selector" range="{{meetingRooms}}" bindchange="onRoomChange">
      <view class="picker">
        选择会议室: {{selectedRoom}}
      </view>
    </picker>
  </view>

</view>
